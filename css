:root{
  /* Tweak these two numbers to taste */
  --logo-h-desktop: 48px;   /* common navbar height */
  --logo-h-mobile:  36px;
  --header-pad-y:    8px;   /* top/bottom padding */
  --header-pad-x:   20px;   /* left/right padding */
}

/* Header layout */
.site-header{
  display:flex; align-items:center; justify-content:space-between;
  padding: var(--header-pad-y) var(--header-pad-x);
  background-color: var(--ink); color:#fff;
  /* optional: enforce a tidy band */
  min-height: calc(var(--logo-h-desktop) + 2*var(--header-pad-y));
}

/* Brand block shouldn’t shrink the logo */
.site-header .brand{
  display:flex; align-items:center; gap:14px;
  flex-shrink:0; min-width:0;
}

/* ✅ Permanent logo sizing by HEIGHT (prevents tall headers) */
.site-header .brand .logo{
  height: var(--logo-h-desktop);
  width: auto;             /* keep aspect ratio */
  max-height: none;        /* defeat any global caps */
  display:block;
}

/* Mobile tweaks */
@media (max-width: 768px){
  .site-header{
    flex-wrap:wrap; gap:10px;
    min-height: calc(var(--logo-h-mobile) + 2*var(--header-pad-y));
  }
  .site-header .brand .logo{ height: var(--logo-h-mobile); }
}

/* If some theme sets a generic cap like .site-header img {max-height:40px} */
.site-header .brand a.logo-link > img.logo{
  max-height: none; /* higher specificity, no !important needed */
}
